{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "borche/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "api",
      "image": "borche/multi-api",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "borche/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "borche/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "api",
        "client"
      ]
    }
  ]
}